# OpenAI API Configuration (REQUIRED)
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# LLM Configuration
# WARNING: GPT-3.5 will likely fail. GPT-4 is highly recommended.
LLM_MODEL_NAME=gpt-4
LLM_MODEL_TEMPERATURE=0.2

# Memgraph Database Configuration
MEMGRAPH_HOST=memgraph
MEMGRAPH_PORT=7687

# ChromaDB Configuration (Vector Database for Embeddings)
CHROMA_DATA_DIR=/etc/chroma
CHROMA_VECTOR_SPACE=cosine

# OpenAI Embedding Model
EMBEDDING_MODEL_NAME=text-embedding-ada-002

# Mock Mode (for testing without real API calls)
# Set to "True" to use mock data, "False" for production
MOCK=False
